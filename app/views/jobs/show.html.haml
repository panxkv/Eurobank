#jobs
  %h1= @job.title
  %p= @job.description
#links
  - if user_signed_in?
    =link_to 'Edit', edit_job_path(@job), class: 'btn btn-default'
    =link_to "Delete", job_path(@job), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default"

  - else
    =link_to 'Back', jobs_path, class: 'btn btn-default'
    =link_to 'Apply', root_path, class: 'btn btn-default'
